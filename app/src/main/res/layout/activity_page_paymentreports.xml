                    tools:ignore="ContentDescription,RtlHardcoded"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/color"
                android:orientation="vertical">

