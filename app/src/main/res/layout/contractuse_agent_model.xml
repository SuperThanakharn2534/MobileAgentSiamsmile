<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              tools:ignore="DisableBaselineAlignment">

    <LinearLayout
        android:layout_width="488dp"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="InefficientWeight,RtlHardcoded,UselessParent">

        <LinearLayout
            android:layout_width="139dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_00"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/color"
                android:padding="5dp"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/textView72"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Agent Id : "
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeDetail"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/Text_01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeSubject"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,NestedWeights"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView73"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ชื่อ : "
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeSubject"
                    tools:ignore="HardcodedText,NestedWeights"/>

                <TextView
                    android:id="@+id/Text_02"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeDetail"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView74"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ดูแลในเขต : "
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeSubject"
                    tools:ignore="HardcodedText,NestedWeights"/>

                <TextView
                    android:id="@+id/Text_03"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeSubject"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_02"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/color"
            tools:ignore="ContentDescription,InefficientWeight"/>

    </LinearLayout>

</LinearLayout>