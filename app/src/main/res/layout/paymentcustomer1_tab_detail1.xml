<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/drawerLayout_02"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color"
        android:orientation="vertical"
        android:weightSum="9"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:background="@color/color"
            android:orientation="vertical"
            tools:ignore="InefficientWeight,UselessLeaf">

            <TextView
                android:id="@+id/textView58"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.20"
                android:gravity="fill_vertical"
                android:text="สถานะ :   App ไม่สมบูรณ์"
                android:textColor="@color/font_header"
                android:textSize="@dimen/FontSizeHeader"
                android:textStyle="bold"
                tools:ignore="HardcodedText,NestedWeights,RtlHardcoded"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:weightSum="8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_name1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:text="App Id  :"
                            android:textAlignment="textEnd"
                            android:textColor="@color/font_subject"
                            android:textSize="@dimen/FontSizeSubject"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,NestedWeights"/>

                        <TextView
                            android:id="@+id/txt_value1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:text="  XXXXXXXXXX"
                            android:textColor="@color/font_detail"
                            android:textSize="@dimen/FontSizeSubject"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_name2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:text="ชื่อผู้เอาประกัน  :"
                            android:textAlignment="textEnd"
                            android:textColor="@color/font_subject"
                            android:textSize="@dimen/FontSizeSubject"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,NestedWeights"/>

                        <TextView
                            android:id="@+id/txt_value2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:text=" XXX  XXXXX   XXXXX"
                            android:textColor="@color/font_detail"
                            android:textSize="@dimen/FontSizeSubject"
                            android:textStyle="bold"
                            tools:ignore="DuplicateIds,HardcodedText,RtlHardcoded"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_name3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text="ชื่อผู้ชำระเบี้ย  :"
                            android:textAlignment="textEnd"
                            android:textColor="@color/font_subject"
                            android:textSize="@dimen/FontSizeSubject"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,NestedWeights"/>

                        <TextView
                            android:id="@+id/txt_value3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:text="  XXX   XXXXX    XXXXXXX"
                            android:textColor="@color/font_detail"
                            android:textSize="@dimen/FontSizeSubject"
                            android:textStyle="bold"
                            tools:ignore="DuplicateIds,HardcodedText,RtlHardcoded"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_Name4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text="สถานะกรมธรรม์  :"
                            android:textAlignment="textEnd"
                            android:textColor="@color/font_subject"
                            android:textSize="@dimen/FontSizeSubject"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,NestedWeights"/>

                        <TextView
                            android:id="@+id/txt_value4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:text="  รอชำระเบี้ย"
                            android:textColor="@color/font_detail"
                            android:textSize="@dimen/FontSizeDetail"
                            android:textStyle="bold"
                            tools:ignore="DuplicateIds,HardcodedText,RtlHardcoded"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_name5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text="ทำสัญญาประกันภัย  :"
                            android:textAlignment="textEnd"
                            android:textColor="@color/font_subject"
                            android:textSize="@dimen/FontSizeSubject"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,NestedWeights"/>

                        <TextView
                            android:id="@+id/txt_value5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:text="  ประกันภัยรถยนต์ประเภทที่1"
                            android:textColor="@color/font_detail"
                            android:textSize="@dimen/FontSizeDetail"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_name6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text="ครบสัญญาประกันภัย  :"
                            android:textAlignment="textEnd"
                            android:textColor="@color/font_subject"
                            android:textSize="@dimen/FontSizeSubject"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,NestedWeights"/>

                        <TextView
                            android:id="@+id/txt_value6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:text="  วันที่ 21/05/2561"
                            android:textColor="@color/font_detail"
                            android:textSize="@dimen/FontSizeDetail"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlHardcoded"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_name7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text="แผน  :"
                            android:textAlignment="textEnd"
                            android:textColor="@color/font_subject"
                            android:textSize="@dimen/FontSizeSubject"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,NestedWeights"/>

                        <TextView
                            android:id="@+id/txt_value7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:text="  แผนที่1"
                            android:textColor="@color/font_detail"
                            android:textSize="@dimen/FontSizeDetail"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_name8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text="เบอร์โทรศัพท์  :"
                            android:textAlignment="textEnd"
                            android:textColor="@color/font_subject"
                            android:textSize="@dimen/FontSizeSubject"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,NestedWeights"/>

                        <TextView
                            android:id="@+id/txt_value8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text="  086-1112233"
                            android:textColor="@color/font_detail"
                            android:textSize="@dimen/FontSizeDetail"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlHardcoded"/>
                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="280dp"
            android:layout_weight="1.40"
            android:background="@color/color"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="396dp"
                tools:context=".MainActivity"
                tools:ignore="NestedWeights">

                <ExpandableListView
                    android:id="@+id/expandableListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color"
                    android:childDivider="@color/greyish"
                    android:divider="?android:attr/colorButtonNormal"
                    android:dividerHeight="0.5dp"
                    android:groupIndicator="@null"
                    android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                    tools:ignore="RtlHardcoded"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="InefficientWeight,NestedWeights">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="InefficientWeight">

                    <Button
                        android:id="@+id/bt_newapp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.10"
                        android:background="@drawable/shape_buttom"
                        android:text="NEW APP"
                        android:textAllCaps="false"
                        android:textColor="@color/font_button"
                        android:textSize="@dimen/FontSizeButton"
                        tools:ignore="ButtonStyle,HardcodedText,InefficientWeight,NestedWeights,RtlHardcoded"/>

                    <Button
                        android:id="@+id/bt_payment"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.10"
                        android:background="@drawable/shape_buttom"
                        android:text="ชำระเบี้ย"
                        android:textAllCaps="false"
                        android:textColor="@color/font_button"
                        android:textSize="24sp"
                        tools:ignore="ButtonStyle,HardcodedText,NestedWeights,RtlHardcoded"/>

                    <Button
                        android:id="@+id/bt_claim"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.10"
                        android:background="@drawable/shape_buttom"
                        android:text="เคลม"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/font_button"
                        android:textSize="24sp"
                        tools:ignore="ButtonStyle,HardcodedText"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/color"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="ScrollViewSize">

                <GridView
                    android:id="@+id/gridview_menu"
                    android:layout_width="match_parent"
                    android:layout_height="1140dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    tools:ignore="NestedScrolling"/>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>