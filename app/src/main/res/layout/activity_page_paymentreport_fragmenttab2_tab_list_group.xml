<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="15dp"
              android:background="@color/color"
              android:orientation="horizontal"
              android:weightSum="1"
              tools:ignore="DisableBaselineAlignment,UseCompoundDrawables">

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="440dp"
        android:layout_height="75dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:background="@color/color"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment,InefficientWeight,RtlHardcoded,UselessParent">

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/cancle"
            tools:ignore="ContentDescription"/>

        <LinearLayout
            android:layout_width="323dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded,RtlSymmetry">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView82"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="App Id : "
                        android:textAlignment="textStart"
                        android:textColor="@color/font_subject"
                        android:textSize="@dimen/FontSizeSubject"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText"/>

                    <TextView
                        android:id="@+id/Appid"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:textColor="@color/font_subject"
                        android:textSize="@dimen/FontSizeSubject"
                        android:textStyle="bold"
                        tools:ignore="InefficientWeight,RtlHardcoded,RtlSymmetry"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView81"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="ชื่อ : "
                        android:textAlignment="textStart"
                        android:textColor="@color/font_subject"
                        android:textSize="@dimen/FontSizeSubject"
                        tools:ignore="HardcodedText"/>

                    <TextView
                        android:id="@+id/List_Name"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:textColor="@color/font_subject"
                        android:textSize="@dimen/FontSizeSubject"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView84"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="แผน : "
                        android:textColor="@color/font_subject"
                        android:textSize="@dimen/FontSizeSubject"
                        tools:ignore="HardcodedText"/>

                    <TextView
                        android:id="@+id/data_product"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:textColor="@color/font_subject"
                        android:textSize="@dimen/FontSizeSubject"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_upanddown"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/down"
            tools:ignore="ContentDescription,RtlHardcoded"/>
    </LinearLayout>

</LinearLayout>