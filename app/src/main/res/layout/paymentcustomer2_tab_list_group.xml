<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color"
              android:orientation="horizontal"
              tools:ignore="DisableBaselineAlignment,UseCompoundDrawables"
              android:weightSum="1">

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/color"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment,InefficientWeight,RtlHardcoded,UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/appai"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView56"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:gravity="center"
                    android:text="APP ID : "
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeSubject"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,InefficientWeight,NestedWeights,SpUsage"/>

                <TextView
                    android:id="@+id/text_01"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeSubject"
                    android:textStyle="bold"
                    tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded,RtlSymmetry">

                <TextView
                    android:id="@+id/textView62"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:gravity="top"
                    android:text="ชื่อ : "
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSize"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/text_02"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSize"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView63"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:text="Product : "
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSize"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/text_03"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSize"
                    tools:ignore="DuplicateIds,HardcodedText"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Text_expire_date"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:text="วันสินสุดคุ้มครอง : "
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSize"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/text_04"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSize"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/down"
            tools:ignore="ContentDescription,RtlHardcoded"/>
    </LinearLayout>

</LinearLayout>