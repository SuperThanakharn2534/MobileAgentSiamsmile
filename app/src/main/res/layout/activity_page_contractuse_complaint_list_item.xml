<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="50dp"
              android:background="#fafafa"
              android:divider="?android:attr/colorForeground"
              android:dividerHeight="5dp"
              android:orientation="horizontal"
              tools:ignore="DisableBaselineAlignment,RtlHardcoded,UseCompoundDrawables">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/point"
            tools:ignore="ContentDescription"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="InefficientWeight">

        <TextView
            android:id="@+id/expandedListItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafafa"
            android:divider="?android:attr/colorForeground"
            android:gravity="center"
            android:textAlignment="textStart"
            android:textColor="@color/font_detail"
            android:textSize="@dimen/FontSizeDetail"
            tools:ignore="InefficientWeight,RtlHardcoded,RtlSymmetry"/>
    </LinearLayout>

</LinearLayout>