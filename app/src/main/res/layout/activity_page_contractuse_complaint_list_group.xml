<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color"
              android:orientation="horizontal"
              tools:ignore="DisableBaselineAlignment,UseCompoundDrawables"
              android:weightSum="1">

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/color"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment,InefficientWeight,RtlHardcoded,UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/listTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="textStart"
                android:textColor="@color/font_subject"
                android:textSize="@dimen/FontSizeTabsbar"
                android:textStyle="bold"
                tools:ignore="HardcodedText,InefficientWeight,NestedWeights,SpUsage"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="109dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/down"
            tools:ignore="ContentDescription,RtlHardcoded"/>
    </LinearLayout>

</LinearLayout>