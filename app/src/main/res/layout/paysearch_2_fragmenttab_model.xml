<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              tools:ignore="DisableBaselineAlignment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="InefficientWeight,RtlHardcoded,UselessParent">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_00"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/textView72"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" App Id : "
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeDetail"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/Text_01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeSubject"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,NestedWeights"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView73"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ชื่อผุ้ชำระเบี้ย : "
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeSubject"
                    tools:ignore="HardcodedText,NestedWeights"/>

                <TextView
                    android:id="@+id/Text_02"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeDetail"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1001"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="สถานะกรมธรรม์ : "
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeSubject"
                    tools:ignore="HardcodedText,NestedWeights"/>

                <TextView
                    android:id="@+id/Text_06"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeSubject"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1002"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ยอดเงินที่ต้องชำระเบี้ย : "
                    android:textAlignment="textStart"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeSubject"
                    tools:ignore="HardcodedText,NestedWeights"/>

                <TextView
                    android:id="@+id/Text_07"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/font_subject"
                    android:textSize="@dimen/FontSizeSubject"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            tools:ignore="UselessLeaf">

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/down"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>